<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OvenTimer.MainPage">

    <ContentPage.Content>
        <Grid Margin="5,5,5,5"
              RowSpacing="0"
              ColumnSpacing="0"
              RowDefinitions = "1*, 1*, 1*"
              ColumnDefinitions ="*">

            <Button Grid.Row="0" x:Name="Oven1Button" Text="오븐 1" FontSize="Medium" Clicked="Oven1Button_Clicked"/>
            <Button Grid.Row="1" x:Name="Oven2Button" Text="오븐 2" FontSize="Medium" Clicked="Oven2Button_Clicked" />
            <Button Grid.Row="2" x:Name="Oven3Button" Text="오븐 3" FontSize="Medium" />

        </Grid>
    </ContentPage.Content>

</ContentPage>
